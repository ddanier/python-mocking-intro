def "nur install" [] {
    uv sync --group dev
}

def "nur update" [] {
    uv sync --group dev
}

def "nur run" [] {
    uv run fastapi dev mocking_intro/main.py
}

def "nur test" [] {
    uv run pytest mocking_intro/ --cov  mocking_intro/ --cov-report term-missing
}

def "nur lint" [] {
    uv run ruff check --fix mocking_intro/
}

def "nur qa" [] {
    nur lint
    nur test
}
